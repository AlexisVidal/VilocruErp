@{
    ViewBag.Title = "Registro de productos";
    ViewBag.Description = "productos";
    Layout = "~/Views/Shared/_Default.cshtml";
    ViewBag.LogoHorizontal = ViewBag.LogoHorizontals;
}
<script src="~/Scripts/exporter.js-master/export.min.js"></script>
<script src="~/Scripts/exporter.js-master/export.js"></script>
<script type="text/javascript">
</script>
@using System
@model IEnumerable<ERP.Admin.Models.ProductoErp>

<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">Listado </span>
                <div class="widget-buttons">
                    @if (Request.UrlReferrer != null)
                    {
                        <a class="btn btn-danger" style="width:60px" onclick="history.go(-1); return false;" href="#">Atras</a>
                    }
                    <a id="NewRegistro" class="btn btn-primary" style="width:60px">
                        Nuevo
                    </a>
                    <a href="#" onclick="return Exporter.export(editabledatatable, 'Productos.xls', 'Productos')">
                        <img style="text-align: center; vertical-align: central; border: none !important;" src="~/img/Excel_32.ico" />
                    </a>
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <table class="table table-striped table-hover table-bordered" id="editabledatatable" style="font-size: 10px">
                    <thead>
                        <tr role="row">
                            <th style="display: none">
                                ID
                            </th>

                            <th style="display: none">
                                IDMARCA
                            </th>
                            <th style="display: none">
                                NOMBREFULL
                            </th>
                            <th style="display: none">
                                IDLINEA
                            </th>
                            <th>
                                LINEA
                            </th>
                            <th style="display: none">
                                IDUNIDAD
                            </th>
                            <th>
                                U. M.
                            </th>
                            <th style="display: none">
                                IDTIPO
                            </th>
                            <th>
                                TIPO
                            </th>
                            <th style="font-size: 11px">
                                CODIGO
                            </th>
                            <th style="font-size: 11px">
                                SKU
                            </th>
                            <th style="font-size: 11px">
                                MARCA
                            </th>
                            <th style="font-size: 11px">
                                DESCRIPCION
                            </th>
                            <th style="font-size: 11px">
                                U. M.
                            </th>
                            <th style="font-size: 11px">
                                STOCK
                            </th>
                            <th>
                                ...
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            string estatu = item.estado;
                        <tr>
                            <td style="display: none">
                                @Html.DisplayFor(modelItem => item.id_producto)
                            </td>
                            <td style="display: none">
                                @Html.DisplayFor(modelItem => item.fk_producto_marca)
                            </td>
                            <td style="display: none">
                                @Html.DisplayFor(modelItem => item.nombre_full)
                            </td>
                            <td style="display: none">
                                @Html.DisplayFor(modelItem => item.fk_producto_tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.producto_linea)
                            </td>
                            <td style="display: none">
                                @Html.DisplayFor(modelItem => item.fk_unidad_medida)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.unidad_medida)
                            </td>
                            <td style="display: none">
                                @Html.DisplayFor(modelItem => item.fk_producto_tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.producto_tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cod_producto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigo_sku)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.marca)
                            </td>
                            <td style="">
                                @Html.DisplayFor(modelItem => item.nom_producto)
                            </td>
                            <td style="">
                                @Html.DisplayFor(modelItem => item.abreviatura)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.cant_items)
                            </td>
                            <td style="width: 200px; text-align: center; vertical-align: middle">
                                @if (estatu == "1")
                                {
                                    <button class="btn btn-sm btn-primary edita" data-toggle="tooltip" title="Editar Registro" style="padding: 2px; font-size: small; margin-top: -5px">Editar</button>
                                    <button class="btn btn-sm btn-danger elimina" data-toggle="tooltip" title="Eliminar Registro" style="padding: 2px; font-size: small; margin-top: -5px">Eliminar</button>
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id='myModalNew' class='modal fade in' role="dialog">
    <div class="modal-dialog" style="width:550px; height:auto">
        <div class="modal-content">
            <div id='myModalContentNew'></div>
        </div>
    </div>
</div>

@section PageScripts{
    <link href="~/assets/css/dataTables.bootstrap.css" rel="stylesheet" />
    <script src="~/assets/js/datatable/jquery.dataTables.min.js"></script>

    <script src="~/assets/js/datatable/ZeroClipboard.js"></script>
    <script src="~/assets/js/datatable/dataTables.tableTools.min.js"></script>
    <script src="~/assets/js/datatable/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/js/datatable/datatables-init.js"></script>
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>
    <script src="~/assets/js/select2/select2.js"></script>
    <!--Bootstrap Tags Input-->
    <script src="~/assets/js/tagsinput/bootstrap-tagsinput.js"></script>
    <script src="~/assets/js/datetime/moment.js"></script>
    <!--Bootstrap Date Picker-->
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>
    <script>
        var id_producto = 0;

        var NroTrCDD = 1;

        function FnDeleteDetalle(obj) {
            var IdTRsele = obj.parentElement.parentElement.id;
            var tr = $("#" + IdTRsele);
            tr.remove();

        }

        $('#myModalNew').on('hide.bs.modal',
            function(e) {

                window.location.reload();
            });
        $('#myModalNew').on('shown.bs.modal',
            function(e) {

                $(document).ready(function() {
                    $('#txtValBus_Familia').select2();
                    $('#txtValBus_Marca').select2();
                    $('#txtValBus_Unidad').select2();
                });

                var idx = $("#id_productox").val();
                var fk_producto_marcasxx = $("#fk_producto_marcasx").val();
                var fk_producto_lineasxx = $("#fk_producto_lineasx").val();
                var fk_producto_tiposxx = $("#fk_producto_tiposx").val();
                var fk_unidad_medidaxx = $("#fk_unidad_medidax").val();
                var cod_productosxx = $("#cod_productosx").val();
                var nom_productosxx = $("#nom_productosx").val();
                var codigo_skusxx = $("#codigo_skusx").val();
                var descripcion_producto_marcasxx = $("#descripcion_producto_marcasx").val();
                var descripcion_producto_lineasxx = $("#descripcion_producto_lineasx").val();
                var descripcion_producto_tiposxx = $("#descripcion_producto_tiposx").val();


                if (idx != "0") {
                    $("#txtValBus_Marca").val(fk_producto_marcasxx).trigger('change');
                    $("#txtValBus_Familia").val(fk_producto_tiposxx).trigger('change');
                    $("#txtValBus_Unidad").val(fk_unidad_medidaxx).trigger('change');
                    $("#nom_producto").val(nom_productosxx);
                    $("#codigo_sku").val(codigo_skusxx);
                    document.getElementById("txtValBus_Familia").disabled = true;

                }

                $("#GuardarEntidad").click(function() {
                    debugger;

                    var id_save = 0;
                    var fk_producto_marca = $("#txtValBus_Marca").val();
                    var fk_producto_tipo = $("#txtValBus_Familia").val();
                    var fk_unidad_medida = $("#txtValBus_Unidad").val();
                    var nom_producto = $("#nom_producto").val();
                    var codigo_sku = $("#codigo_sku").val();

                    if (codigo_sku === '') {
                        codigo_sku = '';
                    }


                    if (fk_producto_tipo === '' || fk_unidad_medida === '' ||fk_producto_marca === '' ||nom_producto === '' ) {
                        swal("", "Datos Incompletos", "error");
                        $("#nom_producto").focus();
                        return false;
                    }

                    id_save = parseInt($("#id_productox").val(), 10);
                    $.ajax({
                        type: 'POST',
                        //url: "SaveTraslado",
                        url: '@Url.Action("GuardaProducto", "ProductoErp")',
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            id_save: id_save,
                            fk_producto_marca: fk_producto_marca,
                            fk_producto_tipo: fk_producto_tipo,
                            fk_unidad_medida: fk_unidad_medida,
                            nom_producto: nom_producto,
                            codigo_sku: codigo_sku
                        }),
                        dataType: 'json',
                        traditional: true,
                        success: function(data) {
                            console.log(data);
                            id_producto = data;
                            if (parseInt(id_producto, 10) > 0) {
                                swal({
                                    title: 'Exito!',
                                    text: 'Se registró correctamente',
                                    type: 'success',
                                    showCancelButton: false,
                                    confirmButtonColor: '#3085d6',
                                    cancelButtonColor: '#d33',
                                    confirmButtonText: 'Ok'
                                }).then(function() {
                                    console.log("salirs");
                                    $("#btnCancel").click();
                                });

                            } else {
                                sweetAlert("", "No se pudo registrar!", "error");
                                id_producto = 0;
                            }
                        }
                    });

                });


            });

        function InputToUpper(obj) {
            if (obj.value != "") {
                obj.value = obj.value.toUpperCase();
            }
    }

        $(document).on('click',
            '.edita',
            function() {
                //debugger;
                var tableRow = $(this).closest("tr");
                id_producto = tableRow.find("td:eq(0)").text();
                id_producto = id_producto.trim();
                console.log("idgeneral: " + id_producto);
                var options = { "backdrop": "static", keyboard: false };
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("Registro", "ProductoErp")',
                    contentType: "application/json; charset=utf-8",
                    data: { id_save: id_producto },
                    dataType: 'html',
                    success: function(response) {
                        $('#myModalContentNew').html(response);
                        $('#myModalNew').modal(options);
                        $('#myModalNew').modal('show');
                    },
                    error: function(request, status, error) {
                        alert(request.responseText);
                    }
                });
            });
        $(document).on('click',
            '.agregar',
            function() {
                //debugger;
                var tableRow = $(this).closest("tr");
                id_producto = tableRow.find("td:eq(0)").text();
                id_producto = id_producto.trim();
                console.log("idgeneral: " + id_producto);
                var options = { "backdrop": "static", keyboard: false };
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("RegistroPagoPrestamo", "Comercial")',
                    contentType: "application/json; charset=utf-8",
                    data: { id_producto: id_producto },
                    dataType: 'html',
                    success: function(response) {
                        $('#myModalContentNew').html(response);
                        $('#myModalNew').modal(options);
                        $('#myModalNew').modal('show');
                    },
                    error: function(request, status, error) {
                        alert(request.responseText);
                    }
                });
            });
        $(document).on('click',
            '.elimina',
            function() {
                //debugger;
                var tableRow = $(this).closest("tr");
                var id_save = tableRow.find("td:eq(0)").text();
                id_save = id_save.trim();

               swal({
                    title: '¿Está seguro?',
                    text: "Se va a eliminar el registro!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    cancelButtonText: 'Cancelar',
                    confirmButtonText: 'Si!'
                }).then((result) => {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("EliminaProducto", "ProductoErp")',
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            id_producto: id_save
                        }),
                        dataType: 'json',
                        traditional: true,
                        success: function(data) {
                            console.log(data);
                            id_producto = data;
                            if (parseInt(id_producto, 10) > 0) {
                                swal({
                                        title: 'Exito!',
                                        text: 'Se eliminó correctamente',
                                        type: 'success',
                                        showCancelButton: false,
                                        confirmButtonColor: '#3085d6',
                                        cancelButtonColor: '#d33',
                                        confirmButtonText: 'Ok'
                                    }).then(function() {
                                    console.log("salirs");
                                    window.location.reload();
                                });

                            } else {
                                sweetAlert("", "No se pudo eliminar!", "error");
                                id_producto = 0;
                            }
                        }
                    });
                }, function (dismiss) {
                    if (dismiss === 'cancel' || dismiss === 'close') {
                        // ignore
                    }
                });
            });
        $("#NewRegistro").click(function() {
            // debugger;
            id_producto = 0;
            var options = { "backdrop": "static", keyboard: false };
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Registro", "ProductoErp")',
                contentType: "application/json; charset=utf-8",
                data: { id_save: id_producto },
                dataType: 'html',
                success: function (response) {
                    $('#myModalContentNew').html(response);
                    $('#myModalNew').modal(options);
                    $('#myModalNew').modal('show');
                },
                error: function (request, status, error) {
                    alert(request.responseText);
                }
            });
        });

        $(document).ready(function() {
            Inicia();

        });

        function Inicia() {
            var table = $('#editabledatatable').dataTable({
                "aLengthMenu": [
                    [5, 15, 20, 100, -1],
                    [5, 15, 20, 100, "All"]
                ],
                "retrieve": "true",
                "iDisplayLength": 20,
                "sPaginationType": "bootstrap",
                "sDom": "Tflt<'row DTTTFooter'<'col-sm-6'i><'col-sm-6'p>>",
                "oTableTools": {
                    "aButtons": [
                        //"copy",
                        "print"
                    ],
                    "sSwfPath": "assets/swf/copy_csv_xls_pdf.swf"
                },
                "language": {
                    "search": "",
                    "sLengthMenu": "_MENU_",
                    "oPaginate": {
                        "sPrevious": "Ant",
                        "sNext": "Sig"
                    }
                }
            });


        }
    </script>

}



