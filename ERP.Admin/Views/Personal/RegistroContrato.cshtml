
@using ERP.Admin.Models
@{
    var _entidadv = (PersonalContratoErp)ViewBag.PersonalContrato;
    int     id_contrato         = 0;
    string  IDCONTRATO          = "";
    string  IDCODIGOGENERAL     = "";
    string  fINICIO_ADDENDUM    = "";
    string  fFINAL_ADDENDUM     = "";
    string  ESTADO              = "";
    string  APODERADO           = "";
    string  APODERADO_DIRECC    = "";
    string  APODERADO_DOCIDENT  = "";
    decimal BASICO              = 0;
    string  CONTRATO_ADDEMDUM   = "";
    string  CONTRATO_PRORROGA   = "";
    int     DURACION            = 0;
    string  fINICIO_CONTRATO    = "";
    string  fFINAL_CONTRATO     = "";
    string  PERIODO_PRUEBA      = "";
    string  fINICIO_PRORROGA    = "";
    string  fFIN_PRORROGA       = "";
    string  IDTIPOCONTRATO      = "";
    string  fFIRMA_CONVENIO     = "";
    string  fFIRMA_CONTRATO     = "";
    string  FIRMA_FISICA        = "";
    string  IDPLANILLA          = "";
    string  NOMBRES             = "";
    string  TIPOCONTRATO        = "";
    string  PLANILLA            = "";


    if (_entidadv != null)
    {
        id_contrato         = _entidadv.id_contrato;
        IDCONTRATO          =   _entidadv.IDCONTRATO;
        IDCODIGOGENERAL     =   _entidadv.IDCODIGOGENERAL;
        fINICIO_ADDENDUM    =   _entidadv.INICIO_ADDENDUM.ToString("dd/MM/yyyy");
        fFINAL_ADDENDUM     =   _entidadv.FINAL_ADDENDUM.ToString("dd/MM/yyyy");
        ESTADO              =   _entidadv.ESTADO;
        APODERADO           =   _entidadv.APODERADO;
        APODERADO_DIRECC    =   _entidadv.APODERADO_DIRECC;
        APODERADO_DOCIDENT  =   _entidadv.APODERADO_DOCIDENT;
        BASICO              =   _entidadv.BASICO;
        CONTRATO_ADDEMDUM   =   _entidadv.CONTRATO_ADDEMDUM;
        CONTRATO_PRORROGA   =   _entidadv.CONTRATO_PRORROGA;
        DURACION            =   _entidadv.DURACION;
        fINICIO_CONTRATO    =   _entidadv.INICIO_CONTRATO.ToString("dd/MM/yyyy");
        fFINAL_CONTRATO     =   _entidadv.FINAL_CONTRATO.ToString("dd/MM/yyyy");
        PERIODO_PRUEBA      =   _entidadv.PERIODO_PRUEBA;
        fINICIO_PRORROGA    =   _entidadv.INICIO_PRORROGA.ToString("dd/MM/yyyy");
        fFIN_PRORROGA       =   _entidadv.FIN_PRORROGA.ToString("dd/MM/yyyy");
        IDTIPOCONTRATO      =   _entidadv.INICIO_ADDENDUM.ToString("dd/MM/yyyy");
        fFIRMA_CONVENIO     =   _entidadv.FIRMA_CONVENIO.ToString("dd/MM/yyyy");
        fFIRMA_CONTRATO     =   _entidadv.FIRMA_CONTRATO.ToString("dd/MM/yyyy");
        FIRMA_FISICA        =   _entidadv.FIRMA_FISICA;
        IDPLANILLA          =   _entidadv.IDPLANILLA;
        NOMBRES             =   _entidadv.NOMBRES;
        TIPOCONTRATO        =   _entidadv.TIPOCONTRATO;
        PLANILLA            =   _entidadv.PLANILLA;
    }
}


@Html.Hidden("id_contratox", @id_contrato)
@Html.Hidden("IDCONTRATOx", @IDCONTRATO)

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="widget" style="margin-bottom: 0">
            <div class="widget-header bordered-bottom bordered-red">
                <span class="widget-caption">Nuevo registro de cargo</span>
            </div>
            <div class="widget-body">
                <div id="horizontal-form">
                    @using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
                    {
                        <div class="row">
                            <div class="form-group" style="margin:5px">
                                <label class="col-sm-5 control-label" style="text-align:left;width:120px">Descripcion <sup>*</sup></label>
                                <div class="col-md-2" style="width:300px">
                                    @Html.Bootstrap().TextBox("txtDescripcion").HtmlAttributes(new { @class = "form-control", @onkeyup = "InputToUpper(this)", @type = "text" })
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-4" style="margin: 5px;text-align:right;vertical-align:middle;width:50%">
                                @Html.Bootstrap().Button().Text("Guardar").Id("GuardarEntidad").Color(BootstrapColors.Success).HtmlAttributes(new { @style = ";border-radius: 5px 5px;" })
                            </div>
                            <div class="col-md-2" style="margin: 5px;">
                                <button class="btn bg-danger" type="button" id="btnCancel" style="color: white;border-radius: 5px 5px;" data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
@section PageScripts{
    <!--Jquery Select2-->
    <script src="~/assets/js/select2/select2.js"></script>
    <!--Bootstrap Tags Input-->
    <script src="~/assets/js/tagsinput/bootstrap-tagsinput.js"></script>
    <script src="~/assets/js/datetime/moment.js"></script>
    <!--Bootstrap Date Picker-->
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

        });


    </script>
}







