
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-bordered" id="editabledataRegiDerec" style="text-align: center;font-size:10px;font-family:Arial, Helvetica, sans-serif">
                    <thead>
                        <tr role="row">
                            <th style="display:none">

                            </th>
                            <th style="font-size: 10px; text-align: center">
                                ID BANCO
                            </th>
                            <th style="font-size: 10px; text-align: center">
                                IDBANCO
                            </th>
                            <th style="font-size: 10px; text-align: center">
                                BANCO
                            </th>
                            <th style="font-size: 10px; text-align: center">
                                NRO CUENTA
                            </th>
                            <th style="font-size: 10px; text-align: center">
                                ESTADO
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td style="display:none">
                                @item.id_personal_cuenta
                            </td>
                            <td style="display:none">
                                @item.fk_banco
                            </td>
                            <td class="input-xs" style="font-size: 10px; text-align: center">
                                @item.idbanco
                            </td>
                            <td class="input-xs" style="font-size: 10px; text-align: center">
                                @item.banco
                            </td>
                            <td class="input-xs" style="font-size: 10px; text-align: center;">
                                @item.nro_cuenta
                            </td>
                            
                            <td class="input-xs" style="font-size: 10px; text-align: center;">
                                @item.NEstado
                            </td>
                            <td class="input-xs" style="font-size: 10px; text-align: center;width:10%">
                                @if (item.NEstado != "ACTIVO")
                                {
                                    <button class="btn btn-sm btn-primary editafam" style="padding: 2px; font-size: small; margin-top: -5px">Editar</button>
                                    <button class="btn btn-sm btn-danger bajafam" style="padding: 2px; font-size: small; margin-top: -5px">Eliminar</button>
                                }

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>