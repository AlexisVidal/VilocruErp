
@using ERP.Admin.Models
@{
    var _entidad = (PersonalHorarioErp)ViewBag.Entidad;
    int id_personal_horario = 0;
    int fk_proyecto = 0;
    string proyecto = "";
    string lugar = "";
    string IDPERSONAL = "";
    string nombres = "";
    decimal lunes = 0;
    decimal martes = 0;
    decimal miercoles = 0;
    decimal jueves = 0;
    decimal viernes = 0;
    decimal sabado = 0;
    decimal horas_mes = 0;
    if (_entidad != null)
    {
        id_personal_horario = _entidad.id_personal_horario;
        fk_proyecto = _entidad.fk_proyecto;
        proyecto = _entidad.proyecto;
        lugar = _entidad.lugar;
        IDPERSONAL = _entidad.IDPERSONAL;
        nombres = _entidad.nombres;
        lunes = _entidad.lunes;
        martes = _entidad.martes;
        miercoles = _entidad.miercoles;
        jueves = _entidad.jueves;
        viernes = _entidad.viernes;
        sabado = _entidad.sabado;
        horas_mes = _entidad.horas_mes;
    }
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "MyForm" }))
{
}
@Html.Hidden("id_personal_horario", @id_personal_horario)
@Html.Hidden("fk_proyectox", @fk_proyecto)
@Html.Hidden("proyectox", @proyecto)
@Html.Hidden("lugarx", @lugar)
@Html.Hidden("IDPERSONALx", @IDPERSONAL)
@Html.Hidden("nombresx", @nombres)
@Html.Hidden("lunesx", @lunes)
@Html.Hidden("martesx", @martes)
@Html.Hidden("miercolesx", @miercoles)
@Html.Hidden("juevesx", @jueves)
@Html.Hidden("viernesx", @viernes)
@Html.Hidden("sabadox", @sabado)
@Html.Hidden("horas_mesx", @horas_mes)

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-red">
                <span class="widget-caption">Nuevo registro de banco</span>
            </div>
            <div class="widget-body">
                <div id="horizontal-form">
                    @using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
                    {
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align:left;width:120px">Trabajador <sup>*</sup> </label>
                                <div class="col-sm-10" style="width:460px">
                                    @Html.DropDownList("txtValBus_Personal", new SelectList(ViewBag.Personal, "IDCODIGOGENERAL", "NOMBRES_FULL"), new { @class = "form-control dropdown-menu", @style = "width:500px", @onkeyup = "InputToUpper(this)" })

                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align:left;width:120px">Servicio <sup>*</sup> </label>
                                <div class="col-md-4" style="width:480px">
                                    @Html.DropDownList("txtValBus_Proyecto", new SelectList(ViewBag.Proyectos, "id_proyecto", "descripcionf"), new { @class = "form-control dropdown-menu", @style = "width:500px", @onkeyup = "InputToUpper(this)" })
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align:left;width:120px">Lugar </label>
                                <div class="col-md-5" style="width:320px">
                                    @Html.Bootstrap().TextBox("txtLugar").HtmlAttributes(new { @onkeyup = "InputToUpper(this)", @class = "form-control input-sm", @style = "text-align:left" })
                                </div>
                                <label class="col-sm-2 control-label" style="text-align: left; width: 80px; padding-top: 8px; padding-right: 0;">H. Mes <sup>*</sup> </label>
                                <div class="col-md-2" style="width:130px">
                                    @Html.Bootstrap().TextBox("txtHorasMensual").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align:left;width:120px">Lunes </label>
                                <div class="col-md-2" style="width:130px">
                                    @Html.Bootstrap().TextBox("txtLunes").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                                <label class="col-sm-1 control-label" style="text-align:left;">Martes </label>
                                <div class="col-md-2" style="width:130px">
                                    @Html.Bootstrap().TextBox("txtMartes").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                                <label class="col-sm-1 control-label" style="text-align:left;width:81px">Miercoles </label>
                                <div class="col-md-2" style="width:130px">
                                    @Html.Bootstrap().TextBox("txtMiercoles").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-1 control-label" style="text-align:left;width:120px">Jueves </label>
                                <div class="col-md-2" style="width:130px">
                                    @Html.Bootstrap().TextBox("txtJueves").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                                <label class="col-sm-1 control-label" style="text-align:left;">Viernes </label>
                                <div class="col-md-2" style="width:130px">
                                    @Html.Bootstrap().TextBox("txtViernes").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                                <label class="col-sm-1 control-label" style="text-align:left;width:81px">Sabado </label>
                                <div class="col-md-2" style="width:130px">
                                    @Html.Bootstrap().TextBox("txtSabado").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top:20px;margin-bottom:5px">
                            <div class="col-md-6" style="text-align: right; vertical-align: middle; width: 50%">
                                @Html.Bootstrap().Button().Text("Guardar").Id("GuardarHorario").Color(BootstrapColors.Success)
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-md bg-danger" type="button" id="btnCanceld" data-dismiss="modal" style="color:white">Cancelar</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>