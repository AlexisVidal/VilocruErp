@using ERP.Admin.Models
@{
    var _entidadp = (PersonalReferenciaErp)ViewBag.ReferenciaExist;
    int IDPERSONALREFERENCIAs = 0;
    string IDCODIGOGENERALs = "";
    string NOMBRESs = "";
    string CARGOs = "";
    string TELEFONOs = "";


    if (_entidadp != null)
    {
        IDPERSONALREFERENCIAs = _entidadp.IDPERSONALREFERENCIA;
        IDCODIGOGENERALs = _entidadp.IDCODIGOGENERAL;
        NOMBRESs = _entidadp.NOMBRES;
        CARGOs = _entidadp.CARGO;
        TELEFONOs = _entidadp.TELEFONO;
    }
}

@Html.Hidden("IDPERSONALREFERENCIAx", @IDPERSONALREFERENCIAs)
@Html.Hidden("IDCODIGOGENERALx", @IDCODIGOGENERALs)
@Html.Hidden("NOMBRESx", @NOMBRESs)
@Html.Hidden("CARGOx", @CARGOs)
@Html.Hidden("TELEFONOx", @TELEFONOs)


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "MyForm" }))
{
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-red">
                <span class="widget-caption">Nuevo registro de referencia</span>
            </div>
            <div class="widget-body">
                <div id="horizontal-form">
                    @using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
                    {
                        <div class="row">
                            <div class="form-group" style="margin:0">
                                <label class="col-sm-2 control-label" style="text-align:left;width:100px">Nombres <sup>*</sup></label>
                                <div class="col-md-8" style="">
                                    @Html.Bootstrap().TextBox("NOMBRESREF").HtmlAttributes(new { @class = "form-control", @onkeyup = "InputToUpper(this)" }).Placeholder("Nombres")
                                    <div class="horizontal-space"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group" style="margin:0">
                                <label class="col-sm-2 control-label" style="text-align:left;width:100px">Cargo <sup>*</sup></label>
                                <div class="col-sm-8" style="">
                                    @Html.Bootstrap().TextBox("CARGOREF").HtmlAttributes(new { @onkeyup = "InputToUpper(this)" }).Placeholder("Cargo")
                                    <div class="horizontal-space"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group" style="margin:0">
                                <label class="col-sm-2 control-label" style="text-align:left;width:100px">Telefono </label>
                                <div class="col-sm-8" style="">
                                    @Html.Bootstrap().TextBox("TELEFONOREF").HtmlAttributes(new { @onkeyup = "InputToUpper(this)" }).Placeholder("Telefono")
                                    <div class="horizontal-space"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4" style="text-align:right;vertical-align:middle;width:50%">
                                @Html.Bootstrap().Button().Text("Guardar").Id("GuardarRef").Color(BootstrapColors.Success)
                            </div>
                            <div class="col-md-2">
                                <button class="btn bg-danger" type="button" style="color:white" id="btnCancelref" data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section PageScripts{
    <!--Jquery Select2-->
    <script src="~/assets/js/select2/select2.js"></script>
    <!--Bootstrap Tags Input-->
    <script src="~/assets/js/tagsinput/bootstrap-tagsinput.js"></script>
    <script src="~/assets/js/datetime/moment.js"></script>
    <!--Bootstrap Date Picker-->
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

        });


    </script>
}