@{
    ViewBag.Title = "Registro de Variables de planillas";
    ViewBag.Description = "Variables de planillas";
    Layout = "~/Views/Shared/_Default.cshtml";
    ViewBag.LogoHorizontal = ViewBag.LogoHorizontals;
}

@using System
@model IEnumerable<ERP.Admin.Models.VariableErp>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">Listado </span>
                <div class="widget-buttons">
                    @if (Request.UrlReferrer != null)
                    {
                        <a class="btn btn-danger" style="width:60px" onclick="history.go(-1); return false;" href="#">Atras</a>
                    }
                    <a id="NewRegistro" class="btn btn-primary" style="width: 60px">
                        Nuevo
                    </a>
                    <a href="#" onclick="return Exporter.export(editabledatatable2, 'Variables.xls', 'Variables')">
                        <img style="text-align: center; vertical-align: central; border: none !important;" src="~/img/Excel_32.ico" />
                    </a>
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <table class="table table-striped table-hover table-bordered" id="editabledatatable2" style="overflow-x: auto; white-space: nowrap;display: inline-block">
                    <thead>
                        <tr role="row">
                            <th style="text-align: center;font-size:11px">
                                IDVARIABLE
                            </th>
                            <th style="text-align: center;font-size:11px">
                                IDPLANILLA
                            </th>
                            <th style="text-align: center; font-size: 11px;display: none">
                                ITEM
                            </th>
                            <th style="text-align: center;font-size:11px">
                                TIPO VARIABLE
                            </th>
                            <th style="text-align: center;font-size:11px">
                                PLANILLA
                            </th>
                            <th style="text-align: center; font-size: 11px;width:142px">
                                DESCRIPCION
                            </th>
                            <th style="text-align: center; font-size: 11px;width:142px">
                                DESC. CORTA
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                INICIO
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                FIN
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                VALOR
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                ES AFP
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                ES ESSALUD
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                ES SENATI
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                ES A. FAMILIAR
                            </th>
                            <th style="width: 300px;text-align: center;font-size:11px">
                                COD. SBS
                            </th>
                            <th style="text-align: center;font-size:11px">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var identidad = "Tr" + item.IDVARIABLE;
                            string finicio = item.FECHA_INICIO.ToString("dd/MM/yyyy");
                            string ffin = item.FECHA_FINAL.ToString("dd/MM/yyyy");
                            string valor = item.VALOR.ToString("N");

                        <tr id="@identidad" >
                            <td style="font-size: 11px;text-align: center">
                                @Html.DisplayFor(modelItem => item.IDVARIABLE)
                            </td>
                            <td style="font-size: 11px;text-align: center">
                                @Html.DisplayFor(modelItem => item.IDPLANILLA)
                            </td>
                            <td class="input-xs" style="font-size: 11px;display: none">
                                @Html.DisplayFor(modelItem => item.ITEM)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DESC_TIPOVARIABLE)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DESC_PLANILLA)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DESCRIPCION)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DESCR_CORTA)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @finicio
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @ffin
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @valor
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DES_AFP)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DES_ESSALUD)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DES_SENATI)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.DES_AFAMILIAR)
                            </td>
                            <td class="input-xs" style="font-size: 11px">
                                @Html.DisplayFor(modelItem => item.CODIGO_SBS)
                            </td>
                            <td class="input-xs" style="font-size: 11px; text-align: center;vertical-align: middle">
                                <button class="btn btn-sm btn-primary edita" style="padding: 2px; font-size: small; margin-top: -5px">Editar</button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id='myModalNew' class='modal fade in' role="dialog">
    <div class="modal-dialog" style="width:600px; height:auto">
        <div class="modal-content">
            <div id='myModalContentNew'></div>
        </div>
    </div>
</div>
@section PageScripts{
    <link href="~/assets/css/dataTables.bootstrap.css" rel="stylesheet"/>
    <script src="~/assets/js/datatable/jquery.dataTables.min.js"></script>

    <script src="~/assets/js/datatable/ZeroClipboard.js"></script>
    <script src="~/assets/js/datatable/dataTables.tableTools.min.js"></script>
    <script src="~/assets/js/datatable/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/js/datatable/datatables-init.js"></script>
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>
    <script src="~/assets/js/inputmask/jasny-bootstrap.min.js"></script>
    <script src="~/assets/js/select2/select2.js"></script>
    <!--Bootstrap Tags Input-->
    <script src="~/assets/js/tagsinput/bootstrap-tagsinput.js"></script>
    <script src="~/assets/js/datetime/moment.js"></script>
    <!--Bootstrap Date Picker-->
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>

    <script>
        $('#myModalNew').on('hide.bs.modal',
            function(e) {
                window.location.reload();
            });
        $('#myModalNew').on('shown.bs.modal',
            function(e) {

                $(document).ready(function() {
                    $('#txtValBus_Variables').select2();
                    $('.date-pickerIni').datepicker(
                        {
                            format: 'dd/mm/yyyy',
                            dateFormat: 'dd/mm/yyyy',
                            autoclose: true,
                            todayHighlight: true
                        }).on('changeDate',
                        function(ev) {
                            $('#sfecha_ini').val($(this).val());
                        }).on('hide',
                        function(event) {
                            event.preventDefault();
                            event.stopPropagation();
                        });

                    $('.date-pickerFini').datepicker(
                        {
                            format: 'dd/mm/yyyy',
                            dateFormat: 'dd/mm/yyyy',
                            autoclose: true,
                            todayHighlight: true
                        }).on('changeDate',
                        function(ev) {
                            $('#sfecha_fin').val($(this).val());
                        }).on('hide',
                        function(event) {
                            event.preventDefault();
                            event.stopPropagation();
                        });

                });

                var idx = $("#IDVARIABLEx").val();
                var ITEMxx = $("#ITEMx").val();
                var FECHA_INICIOxx = $("#FECHA_INICIOx").val();
                var FECHA_FINALxx = $("#FECHA_FINALx").val();
                var ESTADOxx = $("#ESTADOx").val();
                var VALORxx = $("#VALORx").val();
                var IDPLANILLAxx = $("#IDPLANILLAx").val();

                if (idx != "") {
                    $("#txtValBus_Planilla").val(IDPLANILLAxx);
                    $("#txtValBus_Variables").val(idx).trigger('change');;
                    $("#txtInicio").val(FECHA_INICIOxx);
                    $("#sfecha_ini").val(FECHA_INICIOxx);
                    $("#txtFin").val(FECHA_FINALxx);
                    $("#sfecha_fin").val(FECHA_FINALxx);
                    $("#txtValor").val(VALORxx);

                }


                $("#GuardarEntidad").click(function() {
                    debugger;

                    var id_save = 0;
                    var IDPLANILLA = $("#txtValBus_Planilla").val();
                    var IDVARIABLE = $("#txtValBus_Variables").val();
                    var VALOR = $("#txtValor").val();
                    var FECHAINI = $("#sfecha_ini").val();
                    var FECHAFIN = $("#sfecha_fin").val();

                    var IDVARIABLEOLD = $("#IDVARIABLEOLDX").val();
                    var IDPLANILLAOLD = $("#IDPLANILLAOLDX").val();

                    if (VALOR.trim() === '') {
                        VALOR = 0;
                    }


                    if (IDPLANILLA === '' || IDVARIABLE === '' || FECHAINI === '' || FECHAFIN === '') {
                        swal("", "Datos Incompletos", "error");
                        $("#txtValBus_Planilla").focus();
                        return false;
                    }


                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("GuardaDetalleVariable", "Personal")',
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            IDPLANILLA: IDPLANILLA,
                            IDVARIABLE: IDVARIABLE,
                            VALOR: VALOR,
                            FECHAINI: FECHAINI,
                            FECHAFIN: FECHAFIN,
                            IDVARIABLEOLD: IDVARIABLEOLD,
                            IDPLANILLAOLD: IDPLANILLAOLD
                        }),
                        dataType: 'json',
                        traditional: true,
                        success: function(data) {
                            console.log(data);
                            id_save = data;
                            if (parseInt(id_save, 10) > 0) {
                                swal({
                                    title: 'Exito!',
                                    text: 'Se registró correctamente',
                                    type: 'success',
                                    showCancelButton: false,
                                    confirmButtonColor: '#3085d6',
                                    cancelButtonColor: '#d33',
                                    confirmButtonText: 'Ok'
                                }).then(function() {
                                    console.log("salirs");
                                    $("#btnCancel").click();
                                })

                            } else {
                                sweetAlert("", "No se pudo registrar!", "error");
                                id_save = 0;
                            }
                        }
                    });

                });


            });


        $(document).on('click',
            '.edita',
            function() {
                var tableRow = $(this).closest("tr");
                idvariable = tableRow.find("td:eq(0)").text();
                idvariable = idvariable.trim();
                idplanilla = tableRow.find("td:eq(1)").text();
                idplanilla = idplanilla.trim();
                console.log("idgeneral: " + idplanilla);
                var options = { "backdrop": "static", keyboard: false };
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("RegistroVariable", "Personal")',
                    contentType: "application/json; charset=utf-8",
                    data: { id_save: idvariable, idplanilla: idplanilla },
                    dataType: 'html',
                    success: function(response) {
                        $('#myModalContentNew').html(response);
                        $('#myModalNew').modal(options);
                        $('#myModalNew').modal('show');
                    },
                    error: function(request, status, error) {
                        alert(request.responseText);
                    }
                });
                return false;
            });

        $("#NewRegistro").click(function() {
            // debugger;
            idvariable = "";
            idplanilla = "";
            var options = { "backdrop": "static", keyboard: false };
            $.ajax({
                type: 'GET',
                url: '@Url.Action("RegistroVariable", "Personal")',
                contentType: "application/json; charset=utf-8",
                data: { id_save: idvariable, idplanilla: idplanilla },
                dataType: 'html',
                success: function(response) {
                    $('#myModalContentNew').html(response);
                    $('#myModalNew').modal(options);
                    $('#myModalNew').modal('show');
                },
                error: function(request, status, error) {
                    alert(request.responseText);
                }
            });
        });
        $(document).ready(function() {
            Inicia();
        });

        function Inicia() {
            //Datatable Initiating
            oTable = $('#editabledatatable2').dataTable({
                "aLengthMenu": [
                    [5, 15, 20, 100, -1],
                    [5, 15, 20, 100, "All"]
                ],
                "retrieve": "true",
                "iDisplayLength": 20,
                "sPaginationType": "bootstrap",
                "sDom": "Tflt<'row DTTTFooter'<'col-sm-6'i><'col-sm-6'p>>",
                "oTableTools": {
                    "aButtons": [
                        //"copy",
                        "print"
                    ],
                    "sSwfPath": "assets/swf/copy_csv_xls_pdf.swf"
                },
                "language": {
                    "search": "",
                    "sLengthMenu": "_MENU_",
                    "oPaginate": {
                        "sPrevious": "Ant",
                        "sNext": "Sig"
                    }
                }

            });
        }
    </script>
}
