
@using ERP.Admin.Models
@{
    int idcuenta = (int)ViewBag.FkGasto;
}

@Html.Hidden("id_gasto_personalxx", @idcuenta)

@Html.Hidden("sfecha_operacion", "")

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="widget" style="margin-bottom:0">
            <div class="widget-header bordered-bottom bordered-red">
                <span class="widget-caption">Nuevo registro de detalle</span>
            </div>
            <div class="widget-body">
                <div id="horizontal-form">
                    @using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
                    {


                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align: left; width: 80px; padding-top: 8px; padding-right: 0;">Fecha </label>
                                <div class="col-md-4" style="width:220px">
                                    <div class='input-group'>
                                        <input class='form-control date-pickerFini' id='txtOperacion' type='text' data-date-format='dd/mm/yyyy'>
                                        <span class='input-group-addon'>
                                            <i class='fa fa-calendar'></i>
                                        </span>
                                    </div>

                                </div>
                                <label class="col-sm-2 control-label" style="text-align:left; width: 40px;padding-right: 1px">Doc. </label>
                                <div class="col-md-4" style="width:220px">
                                    @Html.Bootstrap().TextBox("txtDocumento").HtmlAttributes(new { @onkeyup = "InputToUpper(this)", @class = "form-control input-sm", @style = "text-align:left" })
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align: left; width: 80px; padding-top: 8px; padding-right: 0;">Concepto </label>
                                <div class="col-md-9" style="width:480px">
                                    @Html.Bootstrap().TextArea("txtConcepto").Rows(3).HtmlAttributes(new { @onkeyup = "InputToUpper(this)", @class = "form-control input-sm", @style = "text-align:left" })

                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align: left; width: 80px; padding-top: 8px; padding-right: 0;">Monto <sup>*</sup> </label>
                                <div class="col-md-3">
                                    @Html.Bootstrap().TextBox("txtMonto").HtmlAttributes(new { @type = "number", @step = "0.01", @min = "0.00", @max = "9999999999.99", @style = "text-align:right" })
                                </div>
                                <label class="col-sm-2 control-label" style="text-align:left; width: 60px;padding-right: 1px">Destino </label>
                                <div class="col-md-4" style="width:280px">
                                    @Html.Bootstrap().TextBox("txtDestino").HtmlAttributes(new { @onkeyup = "InputToUpper(this)", @class = "form-control input-sm", @style = "text-align:left" })
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align:left; width: 80px;padding-right: 1px;padding-top:0">Centro Costo </label>
                                <div class="col-md-4" style="width:480px">
                                    @Html.DropDownList("txtValBus_Proyecto", new SelectList(ViewBag.Proyectos, "id_proyecto", "descripcionf"), new { @class = "form-control dropdown-menu", @style = "width:450px", @onkeyup = "InputToUpper(this)" })

                                    @*@Html.Bootstrap().TextBox("txtDestino").HtmlAttributes(new { @onkeyup = "InputToUpper(this)", @class = "form-control input-sm", @style = "text-align:left" })*@
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="form-group" style="margin: 1px">
                                <label class="col-sm-2 control-label" style="text-align: left; width: 80px; padding-top: 8px; padding-right: 0;">Ruc </label>
                                <div class="col-md-3">
                                    <input data-mask="99999999999" class="form-control" placeholder="Ruc" id="ruc" type="text">
                                </div>
                                <div class="col-md-4" style="width:340px">
                                    @Html.Bootstrap().TextBox("razon_social").HtmlAttributes(new { @onkeyup = "InputToUpper(this)", @class = "form-control input-sm", @style = "text-align:left;height:34px" })
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:5px">
                            <div class="col-md-6" style="text-align: right; vertical-align: middle; width: 50%">
                                @Html.Bootstrap().Button().Text("Guardar").Id("GuardarDetalle").Color(BootstrapColors.Success)
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-md bg-danger" type="button" id="btnCanceld" data-dismiss="modal" style="color:white">Cancelar</button>
                            </div>
                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
</div>

@section PageScripts{
    <!--Jquery Select2-->
    <script src="~/assets/js/select2/select2.js"></script>
    <!--Bootstrap Tags Input-->
    <script src="~/assets/js/tagsinput/bootstrap-tagsinput.js"></script>
    <script src="~/assets/js/datetime/moment.js"></script>
    <!--Bootstrap Date Picker-->
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

        });



    </script>
}


