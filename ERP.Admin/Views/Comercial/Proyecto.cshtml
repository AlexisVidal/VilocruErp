        $(document).on('click', '.compras', function () {
            var tableRow = $(this).closest("tr");
            IdProyecto = tableRow.find("td:eq(0)").text();
            IdProyecto = IdProyecto.trim();
            var options = { "backdrop": "static", keyboard: false };
