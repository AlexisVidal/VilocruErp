                                        TDTxtPrecAlmMov = "TDTxtPrecAlmMov" + IdTrEditAlmMov;
                                        TDSubTotaAlmMov = "TDSubTotaAlmMov" + IdTrEditAlmMov;
                                        TDEstaAlmMov = "TDEstaAlmMov" + IdTrEditAlmMov;
                                        TDBtnDeleAlmMov = "TDBtnDeleAlmMov" + IdTrEditAlmMov;

                                        <tr id="@IdTrEditAlmMov">
