        $('#myModalNew').on('shown.bs.modal',
            function (e) {

                $(document).ready(function () {
                $('.date-pickerIniPago').datepicker(
                    {
                        format: 'dd/mm/yyyy',
                        dateFormat: 'dd/mm/yyyy',
                        autoclose: true,
                        todayHighlight: true
                    }).on('changeDate',
                        function (ev) {
                            $('#sfecha_pago').val($(this).val());
                        }).on('hide',
                            function (event) {
                                event.preventDefault();
                                event.stopPropagation();
                            });
                });

                $("#GuardarPagoLetra").click(function() {
                    debugger;
                    var id_save = 0;
                    var idletradetalle = $("#sidletradetalle").val();
                    var sfecha_pago = $("#sfecha_pago").val();


                    if (sfecha_pago === "") {
                        swal("", "No se ha seleccionado fecha de pago!", "error");
                        $("#sfecha_pago").focus();
                        return false;
                    }



                    id_save = parseInt(idletradetalle, 10);
                    $.ajax({
                        type: 'POST',
                        //url: "SaveTraslado",
                        url: '@Url.Action("GuardaPagoLetra", "Comercial")',
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            id_letras_por_pagar_proveedor_detalle: id_save,
                            fecha_pago: sfecha_pago
                        }),
                        dataType: 'json',
                        traditional: true,
                        success: function(data) {
                            console.log(data);
                            id_letras_por_pagar_proveedor_detalle = data;
                            if (parseInt(id_letras_por_pagar_proveedor_detalle, 10) > 0) {
                                swal({
                                    title: 'Exito!',
                                    text: 'Se registró correctamente',
                                    type: 'success',
                                    showCancelButton: false,
                                    confirmButtonColor: '#3085d6',
                                    cancelButtonColor: '#d33',
                                    confirmButtonText: 'Ok'
                                }).then(function() {
                                    console.log("salirs");
                                    $("#btnCancel").click();
                                });

                            } else {
                                sweetAlert("", "No se pudo registrar!", "error");
                                id_letras_por_pagar_proveedor_detalle = 0;
                            }
                        }
                    });

                });

            });

        function eventAfterAllRenderCallback() {
            $('.fc-agendaDay-button').click(function () {
                $("#schedule_container").css('min-width', $('.fc-resource-cell').length * slot_width_resource);
            });
            $('.fc-resourceDay-button').click(function () {
