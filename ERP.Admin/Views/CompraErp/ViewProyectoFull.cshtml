                            <div class="col-md-2" style="text-align: right; font-weight: bold">
                                CLIENTE
                            </div>
                            <div class="col-md-8">
                                @Cliente
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1" style="text-align: right; font-weight: bold">
                                INICIO
                            </div>
                            <div class="col-md-1">
                                @Inicio
                            </div>
                            <div class="col-md-1" style="text-align: right; font-weight: bold">
                                FIN
