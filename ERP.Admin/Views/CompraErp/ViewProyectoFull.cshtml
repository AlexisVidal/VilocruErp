                                                    </td>
                                                    <td>
                                                        @solicita
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.cod_producto)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.codigo_sku)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.descripcion_producto_familia)
                                                    </td>
                                                    <td>
