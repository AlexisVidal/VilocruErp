            <div class="widget-body" style="padding-top:0">
                <div id="horizontal-form">
                    @using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <h5>Datos</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1" style="text-align: right; font-weight: bold">
                                CODIGO
                            </div>
                            <div class="col-md-1">
