<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <table class="table table-striped table-hover table-bordered" id="editabledataMarcas" style="text-align: center;font-size:10px;font-family:Arial, Helvetica, sans-serif">
                    <thead>
                        <tr role="row">
                            <th style="display:none">

                            </th>
                            <th style="display: none">

                            </th>
                            <th style="font-size: 11px; text-align: center">
                                ITEM
                            </th>
                            <th style="font-size: 11px; text-align: center">
                                TIPO
                            </th>
                            <th style="font-size: 11px; text-align: center">
                                DOCUMENTO
                            </th>
                            <th style="font-size: 11px; text-align: center">
                                NOMBRES
                            </th>
                            <th style="font-size: 11px; text-align: center">
                                MARCA
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="display:none">
                                @item.id_tabla
                            </td>
                            <td style="display: none">
                                @item.IDCONTROLINGRESO
                            </td>
                            <td class="input-xs" style="font-size: 11px; text-align: center; padding-bottom: 4px; padding-top: 4px">
                                @item.ITEM
                            </td>
                            <td class="input-xs" style="font-size: 11px; text-align: center; padding-bottom: 4px; padding-top: 4px">
                                @item.DESCTIPO
                            </td>
                            <td class="input-xs" style="font-size: 11px; text-align: center; padding-bottom: 4px; padding-top: 4px">
                                @item.IDPERSONAL
                            </td>
                            <td class="input-xs" style="font-size: 11px; text-align: center; padding-bottom: 4px; padding-top: 4px">
                                @item.NOMBRES
                            </td>
                            <td class="input-xs" style="font-size: 11px; text-align: center; padding-bottom: 4px; padding-top: 4px">
                                @item.MARCACION
                            </td>
                            <td class="input-xs" style="font-size: 10px; text-align: center; padding-bottom: 4px; padding-top: 4px">
                                <button class="btn btn-xs btn-danger eliminamarca" style="">Eliminar</button>
                                <button class="btn btn-xs btn-primary modificamarca" style="">Modificar</button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="col-md-1">
            </div>
        </div>
    </div>
</div>
