                                                <td class='input-xs'>
                                                    @item.descripcion_producto_subfamilia
                                                </td>
                                                <td id="@TDCantCCD" class='input-xs' style='text-align: right;'>
                                                    @item.cantidad
                                                </td>
                                                <td id="@TDPrecCCD" class='input-xs' style='text-align: right;'>
                                                    @item.precio_compra
                                                </td>
