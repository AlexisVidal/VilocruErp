                                    string strTotaCompComp = string.Format("{0:###,###,###,##0.00##}", Decimal.Parse(totaCompComp.ToString()));
                                }
                                <table class="table table-striped table-hover table-bordered" id="tblTotalCompComp">
                                    <thead>
                                        <tr role="row">
                                            <td style="text-align: right;">
