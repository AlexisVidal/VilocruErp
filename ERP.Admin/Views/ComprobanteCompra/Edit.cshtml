                                    @Html.Hidden("txtCompCompEdit_FkTipoMone", Model.fk_tipo_moneda)
                                    <div class="horizontal-space"></div>
                                </div>
                                <label class="col-sm-1 control-label" style="text-align: right;">Fecha <sup>*</sup></label>
                                <div class="col-md-2">
